extends layout 

block content
    h1=title 

    ul 
    - album_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;})
    each album in album_list 
        li 
            a(href=album.url) #{album.title}
            |   (#{album.artist.name})

    else 
        li There are no albums.